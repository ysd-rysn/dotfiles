# Default settings for all hosts
Host *
    # Keep connections alive
    ServerAliveInterval 60
    ServerAliveCountMax 3

    # Use Bitwarden SSH Agent
    {{- if eq .chezmoi.os "darwin" }}
    IdentityAgent ~/.bitwarden-ssh-agent.sock
    {{- end }}

    # Security settings
    IdentitiesOnly yes

    # Connection settings
    Compression yes
    TCPKeepAlive yes

Host github.com
    # Bitwarden SSH Agent handles key management
    {{- if eq .chezmoi.os "darwin" }}
    IdentityAgent ~/.bitwarden-ssh-agent.sock
    {{- end }}

Host raspi5
    HostName 192.168.1.20
    User ysd
    Port 22
    ForwardAgent yes
    #StrictHostKeyChecking no # Fix this later

Host raspi3b
    HostName 192.168.1.21
    User ysd
    Port 22

Host rtx1210
    HostName 192.168.1.1
    User ysd
    Port 22

# Proxmox direct connection
Host proxmox
    HostName 192.168.11.32
    User root
    Port 22

Host dokploy-main
    HostName 192.168.20.100
    User dokploy
    Port 22

Host dokploy-worker
    HostName 192.168.20.101
    User dokploy-worker
    Port 22
