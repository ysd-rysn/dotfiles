# Default settings for all hosts
Host *
    # Keep connections alive
    ServerAliveInterval 60
    ServerAliveCountMax 3

    # Use Bitwarden SSH Agent
    {{- if eq .chezmoi.os "darwin" }}
    IdentityAgent ~/.bitwarden-ssh-agent.sock
    {{- end }}

    # Security settings
    IdentitiesOnly yes

    # Connection settings
    Compression yes
    TCPKeepAlive yes

Host github.com
    # Bitwarden SSH Agent handles key management
    {{- if eq .chezmoi.os "darwin" }}
    IdentityAgent ~/.bitwarden-ssh-agent.sock
    {{- end }}

Host raspi5
    HostName raspi5.lan
    User ysd
    Port 22
    ForwardAgent yes

Host raspi3b
    HostName raspi3b.lan
    User ysd
    Port 22

Host rtx1210
    HostName rtx1210.lan
    User ysd
    Port 22

# Proxmox direct connection
Host proxmox
    HostName proxmox.lan
    User root
    Port 22

Host dokploy-main
    HostName dokploy-main.lan
    User dokploy
    Port 22

Host dokploy-worker
    HostName dokploy-worker.lan
    User dokploy-worker
    Port 22
